Map "MAP01" "$TXT_MAP01"
{
	LightMode = 3
	Sky1 = "textures/sky1.png"
	Music = "O_TEK"
	Next = "MAP02"
}

Map "TEST" "$TXT_TEST"
{
	LightMode = 3
	Sky1 = "textures/sky1.png"
	Music = "O_TEK"
}
